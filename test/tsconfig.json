{
    "compilerOptions": {
      // "noImplicitAny": false,
      // "allowJs": true,
      "target": "ES2017",
      "module": "ESNext",
      "moduleResolution": "Node",
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "outDir": "./dist",
      "strict": true,
      "rootDirs": ["./src"],
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
    },
    "ts-node": {
      "esm": true,
      "experimentalSpecifierResolution": "node",
    },
    "exclude": ["dist", "node_modules"],
    "include": [
      "./src"
    ],
  }
  